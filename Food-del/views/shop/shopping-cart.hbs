{{# if products}}
<div class="row">
    <div class ="col-sm-6 col-md-6 col-md-offset-7 col-sm-offset-3">
        <ul class="list-group">
            {{# each products }}
            <li class="list-group-item">
                <span class="badge badge-pill badge-warning notification">{{ this.qty }}</span>
                <strong>{{ this.item.title }}</strong>
                <span class='label label-success'>price:&#8377 {{ this.price }}</span>
                <div class="btn-group dropup">
                 <a href="/reduce/{{this.item._id}}" class="btn btn-success float-right" role="button">Reduce by 1</a>
                <br>
                <a href="/remove/{{this.item._id}}" class="btn btn-success float-right" role="button">Remove All</a>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <div class ="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong>Total:&#8377 {{ totalPrice }}</strong>
    </div>
</div>
<hr>
<div class="rowr">
    <div class ="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <a href = "/checkout" type="button" class="btn btn-success">Checkout for payment</a>
    </div>
</div>
{{else}}
    <div class="rowr">
        <div class ="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>There are no items in the cart</strong>
        </div>
    </div>
{{/if}}